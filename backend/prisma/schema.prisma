generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"  // Change to PostgreSQL/MySQL for production
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(uuid())  // UUID for user identification
  phoneHash   String?                          // Store hashed phone here
  verified    Boolean  @default(false)         // Whether phone verification is completed
  publicKey   String?                          // For E2EE (optional)
  createdAt   DateTime @default(now())         // Timestamp for account creation
  messages    Message[]                        // Relationship to messages
}


model Message {
  id          String   @id @default(uuid())
  senderId    String
  sender      User     @relation(fields: [senderId], references: [id])
  content     String                             // Encrypted message content
  createdAt   DateTime @default(now())
}


