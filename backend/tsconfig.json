{
  "compilerOptions": {
    "target": "ES2020",         // or ES2019, ES2021, etc. for modern features
    "module": "ESNext",         // or "commonjs", depending on your runtime preference
    "outDir": "./dist",
    "rootDir": "./",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}

